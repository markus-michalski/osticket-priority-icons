{
    "name": "mmd/osticket-priority-icons",
    "description": "osTicket plugin that replaces priority text labels with visual color-coded icons",
    "type": "osticket-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Markus Michalski",
            "email": "info@markus-michalski.net"
        }
    ],
    "homepage": "https://github.com/markus-michalski/osticket-priority-icons",
    "support": {
        "issues": "https://github.com/markus-michalski/osticket-priority-icons/issues",
        "source": "https://github.com/markus-michalski/osticket-priority-icons"
    },
    "keywords": [
        "osticket",
        "plugin",
        "priority",
        "icons",
        "visual"
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite='Unit Tests'",
        "test:coverage": "phpunit --coverage-html=coverage",
        "analyse": "phpstan analyse -l max class.PriorityIconsPlugin.php config.php"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
